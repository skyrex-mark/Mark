{
  "name": "mark",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-scripts": "2.0.0",
    "semantic-ui-css": "^2.4.0",
    "semantic-ui-react": "^0.82.5"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "test:ci": "set CI=true && react-scripts test",
    "test:coverage": "set CI=true && react-scripts test --coverage  --coverageDirectory=coverage",
    "eject": "react-scripts eject",
    "docz:dev": "docz dev",
    "docz:build": "docz build"
  },
  "devDependencies": {
    "docz": "^0.11.2",
    "husky": "^1.0.0",
    "nyc": "^13.0.1",
    "prettier": "^1.14.3",
    "pretty-quick": "^1.7.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && yarn test:ci"
    }
  }
}
